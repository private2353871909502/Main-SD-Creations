<pre data-prismjs-copy="Copy">
<code id="demo" class="language-js">if((user.telegram!="your telegram id")|(!request.forward_from_chat)|(!request.forward_from)){return}

Bot.runAll({
command: "Message",
for_chats: "private-chats",
options: { msg_id: request.message_id, chatid: request.chat_id }
})
</code></pre>
